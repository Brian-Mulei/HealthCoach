<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:padding="8dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/step_pie_chart_card"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/exercise_info_card"
            app:cardUseCompatPadding="true"
            android:layout_margin="8dp"
            app:cardCornerRadius="4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/steps_icon"
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_walking"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    />
                <TextView
                    android:id="@+id/steps_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="Steps"
                    app:layout_constraintTop_toTopOf="@id/steps_icon"
                    app:layout_constraintStart_toEndOf="@id/steps_icon"
                    app:layout_constraintBottom_toBottomOf="@id/steps_icon"

                    />

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/step_pie_chart"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/step_bar_chart"/>

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/step_bar_chart"
                    android:layout_width="260dp"
                    android:layout_height="100dp"
                    app:layout_constraintTop_toBottomOf="@id/step_pie_chart"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/exercise_info_card"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/step_pie_chart_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardUseCompatPadding="true"
            android:layout_margin="8dp"
            app:cardCornerRadius="4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/exercise_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/exercise_icon"
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_running"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    />
                <TextView
                    android:id="@+id/exercise_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="Exercise"
                    app:layout_constraintTop_toTopOf="@id/exercise_icon"
                    app:layout_constraintStart_toEndOf="@id/exercise_icon"
                    app:layout_constraintBottom_toBottomOf="@id/exercise_icon"
                    />

                <TextView
                    android:id="@+id/exercise_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/exercise_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/exercise_calories"
                    tools:text="18 min 13 sec"/>

                <TextView
                    android:id="@+id/exercise_calories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/exercise_title"
                    app:layout_constraintStart_toEndOf="@id/exercise_duration"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="78 kcal"/>

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/speed_hr_lineChart"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    app:layout_constraintTop_toBottomOf="@id/exercise_duration"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>